<h1 class="h1">登録済みルーム一覧</h1>
<div class="room-list">
  <table>
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>作成日</th>
        </tr>
      </thead>
 
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td class="r-img"><%= image_tag room.image if room.image.attached? %></td>
            <td>
              <%= link_to room_path(room.id) do %>
                <%= room.roomname %>
              <% end %>
            </td>
            <td><%= room.roomabout %></td>
            <td><p>¥<%= room.cost %>円</p></td>
            <td><%= room.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

