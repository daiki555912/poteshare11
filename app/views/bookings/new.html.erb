<div class="room-show-all">
  <div class="room-page-left">
    
      <div class="room-img">
        <% if @room.image.attached? %>
          <%= image_tag @room.image %>
        <% end %><br>
      </div>

      <div class="room-name">
        <p>ルーム名</p>
        <%= @room.roomname %><br>
      </div>

      <div class="room-address">
        <p>住所</p>
        <%= @room.address %><br>
      </div>

      <div class="room-about">
        <%= simple_format @room.roomabout %><br>
      </div>
  </div>

  <div class="room-page-right">
  
    <div class="room-cost">
      <p>¥ <%= @room.cost %> /日</p>
    </div>
    
    <%= form_for @booking, url: confirm_bookings_path(@booking) do |f| %>
      <div class="start-day">
        <%= f.label :start_date, "開始日" %>
        <%= f.date_field :start_date %>
      </div>

      <div class="end-day">
        <%= f.label :last_date, "終了日" %>
        <%= f.date_field :last_date %>
      </div>

      <div class="count">
        <%= f.label :people, "人数" %>
        <%= f.number_field :people %>
      </div>

      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.hidden_field :booking_id, value: @booking.id %>


      <div class="reserve">
        <%= f.submit "予約する" %>
      </div>
    <% end %>
  </div>
</div>